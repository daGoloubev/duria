mixin confirm_modal(modal_id, modal_title, modal_txt)
    .modal.fade(role='dialog', id='#{modal_id}')
        .modal-dialog
            .modal-content
                .modal-header
                    button.close(type='button',data-dismiss='modal', id='#{modal_id}_close') &times;
                    h4.modal-title
                        | #{modal_title}
                .modal-body
                    p| #{modal_txt}
                .modal-footer
                    button.btn.btn-success(type='button',data-dismiss='modal', id='#{modal_id}_accept')| Ja
                    button.btn.btn-danger(type='button',data-dismiss='modal', id='#{modal_id}_cancel')| Nej