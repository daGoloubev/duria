mixin camera(modal_id, modal_title)
    .modal.fade(role='dialog', id='#{modal_id}', aria-hidden="true")
        .modal-dialog
            .modal-content
                .modal-header
                    button.close(type='button',data-dismiss='modal', id='#{modal_id}_close') &times;
                    h4.modal-title
                        | #{modal_title}
                    .modal-body
                        #sketch-holder
                    .modal-footer
