mixin layer(name, icon, style)
    label(class='list-group-item checkbox-inline', style='#{style}')
        input(type='checkbox')
        a(href='#',data-toggle='collapse', data-target='##{name}_layer_content')
            i(class='fa fa-#{icon} fa-lg btn-large', aria-hidden='true')|&nbsp; #{name}
        .collapse(id='#{name}_layer_content')
            br
            input(class='',type='range', min='0', max='1',step='0.1')
